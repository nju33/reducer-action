# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mdx,txt}]
trim_trailing_whitespace = false
indent_size = 2

[*.{js,jsx,flow,json,ts,tsx,css,scss,less,rs,toml,yml,fish}]
indent_size = 2

[.{babel,prettier,eslint,stylelint,postcss,firebase}rc]
indent_size = 2

[*.{coffee,sass,styl,rb,py}]
indent_size = 4

[Makefile, Dockerfile]
indent_style = tab
indent_size = 4
